local BendruHub = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = BendruHub:MakeWindow({Name = "Bendru Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "Bendru Hub"})

--Notification

BendruHub:MakeNotification({
	Name = "Bendru Hub",
	Content = "Welcome To Bendru Hub",
	Image = "rbxassetid://4483345998",
	Time = 5
})

--Value

_G.SelectWeapon = "Melee"

--Funcition

--Tự động bật Haki Buso khi vào game
game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Buso")
--Hết!

function Pirates()
    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("SetTeam","Pirates")
end

function Marines()
    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("SetTeam","Marines")
end

function BringFruit()
	game:GetService("RunService").Stepped:Connect(function()
		pcall(function()
		  for i,v in pairs(game:GetService("Workspace"):GetChildren()) do
				if v:IsA("Tool") then
				  v.Handle.CFrame = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame
				print("Omg, Done Bring Fruit!")
				else
				print("Fruit Do Not Have In This Sever")
				end
			end
		end)
	end)
end
